<?xml version="1.0"?>
<?define ProductVersion = "0.9.4"?>
<?define ProductUpgradeCode = "814501d0-3f2a-4d44-8503-6f414599592b"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
   <Product Id="*" UpgradeCode="$(var.ProductUpgradeCode)" 
            Name="Endless Sky" Version="$(var.ProductVersion)" Manufacturer="Michael Zahniser" Language="1033">
      <Package InstallerVersion="200" Compressed="yes" Comments="Windows Installer Package"/>
      <Media Id="1" Cabinet="product.cab" EmbedCab="yes"/>
      <Icon Id="ProductIcon" SourceFile="EndlessSky.ico"/>
      <Property Id="ARPPRODUCTICON" Value="ProductIcon"/>
      <Property Id="ARPHELPLINK" Value="https://endless-sky.github.io/"/>
      <Property Id="ARPURLINFOABOUT" Value="https://endless-sky.github.io/"/>
      <Property Id="ARPNOREPAIR" Value="1"/>
      <Property Id="ARPNOMODIFY" Value="1"/>
      <Upgrade Id="$(var.ProductUpgradeCode)">
         <UpgradeVersion Minimum="$(var.ProductVersion)" OnlyDetect="yes" Property="NEWERVERSIONDETECTED"/>
         <UpgradeVersion Minimum="0.0.0" Maximum="$(var.ProductVersion)" IncludeMinimum="yes" IncludeMaximum="no" 
                         Property="OLDERVERSIONBEINGUPGRADED"/>	  
      </Upgrade>
      <Condition Message="A newer version of this software is already installed.">NOT NEWERVERSIONDETECTED</Condition>
 
      <Directory Id="TARGETDIR" Name="SourceDir">
         <Directory Id="ProgramFilesFolder">
            <Directory Id="INSTALLDIR" Name="EndlessSky">
				<Directory Id="BinDir" Name="bin">
				<Directory Id="BinReleaseDir" Name="Release">
				   <Component Id="ApplicationFiles" Guid="2a053ccf-0712-4016-bd41-24fcdc7c91ce">
					  <File Id="EndlessSkyApp" Source="bin\Release\EndlessSky.exe"/>
					  <File Id="glew32dll" Source="bin\Release\glew32.dll"/>
					  <File Id="libgccsseh1dll" Source="bin\Release\libgcc_s_seh-1.dll"/>
					  <File Id="libjpeg62dll" Source="bin\Release\libjpeg-62.dll"/>
					  <File Id="libpng1515dll" Source="bin\Release\libpng15-15.dll"/>
					  <File Id="libstdc6dll" Source="bin\Release\libstdc++-6.dll"/>
					  <File Id="libturbojpegdll" Source="bin\Release\libturbojpeg.dll"/>
					  <File Id="libwinpthread1dll" Source="bin\Release\libwinpthread-1.dll"/>
					  <File Id="OpenAL32dll" Source="bin\Release\OpenAL32.dll"/>
					  <File Id="SDL2dll" Source="bin\Release\SDL2.dll"/>
					  <File Id="softoaldll" Source="bin\Release\soft_oal.dll"/>
					  <File Id="zlib1dll" Source="bin\Release\zlib1.dll"/>
				   </Component>
				</Directory>
            </Directory>
         </Directory>
 
         <Directory Id="ProgramMenuFolder">
            <Directory Id="ProgramMenuSubfolder" Name="EndlessSky">
               <Component Id="ApplicationShortcuts" Guid="048e71d1-3f9a-4a55-839e-1600797abfbc">
                  <Shortcut Id="EndlessSkyShortcut" Name="EndlessSky" Description="Endless Sky" 
                            Target="[INSTALLDIR]EndlessSky.exe" WorkingDirectory="INSTALLDIR"/>
                  <RegistryValue Root="HKCU" Key="Software\EndlessSky\EndlessSky" 
                            Name="installed" Type="integer" Value="1" KeyPath="yes"/>
                  <RemoveFolder Id="ProgramMenuSubfolder" On="uninstall"/>
               </Component>
            </Directory>
         </Directory>
      </Directory>
 
      <InstallExecuteSequence>
         <RemoveExistingProducts After="InstallValidate"/>
      </InstallExecuteSequence>
 
      <Feature Id="DefaultFeature" Level="1">
         <ComponentRef Id="ApplicationFiles"/>
         <ComponentRef Id="ApplicationShortcuts"/>		 
      </Feature>
   </Product>
</Wix>